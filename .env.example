# ConvoX Bot Environment Configuration
# Copy this file to .env and fill in your values

# ================================
# BOT CONFIGURATION
# ================================

# Bot Information
BOT_NAME=ConvoX
BOT_PREFIX=!
BOT_VERSION=1.0.0
BOT_DESCRIPTION=Chatbot của sự đam mê
BOT_AUTHOR=Thanh Vương

# ================================
# ADMIN CONFIGURATION
# ================================

# Admin User IDs (Facebook UIDs)
# Separate multiple UIDs with spaces or commas
# Example: ADMIN_UIDS=1000123456789 1000234567891 1000345678912
OWNER_UIDS=
ADMIN_UIDS=

# ================================
# FACEBOOK CONFIGURATION
# ================================

# Facebook App State File Path (optional, defaults to ./fbstate.json)
# FBSTATE_FILE=./fbstate.json

# Facebook API Settings
FACEBOOK_LISTEN_EVENTS=true
FACEBOOK_LISTEN_TYPING=true
FACEBOOK_SELF_LISTEN=false
FACEBOOK_FORCE_LOGIN=true
FACEBOOK_LOG_LEVEL=silent

# ================================
# LOGGING CONFIGURATION
# ================================

# Log Level: debug, info, warn, error, silent
LOG_LEVEL=info

# Enable colored console output
LOG_COLORS=true

# Enable file logging
LOG_TO_FILE=false

# Log file path
LOG_FILE=./logs/bot.log

# Maximum log file size in bytes (10MB default)
LOG_MAX_SIZE=10485760

# Maximum number of log files to keep
LOG_MAX_FILES=5

# ================================
# DATABASE CONFIGURATION
# ================================

# Database file path
DATABASE_FILE=./Fca_Database/database.sqlite

# ================================
# PLUGIN CONFIGURATION
# ================================

# Enable plugins
PLUGINS_ENABLED=true

# Auto load plugins on startup
PLUGINS_AUTO_LOAD=true

# Enable hot reload for plugins (development)
PLUGINS_HOT_RELOAD=true

# Plugin directory
PLUGINS_DIR=./plugins

# ================================
# SECURITY CONFIGURATION
# ================================

# Group management mode: whitelist or blacklist
GROUP_MODE=whitelist

# Auto mark messages as read
AUTO_MARK_READ=true

# Auto reply feature
AUTO_REPLY=true

# Command cooldown in seconds
COMMAND_COOLDOWN=3

# ================================
# DEVELOPMENT CONFIGURATION
# ================================

# Development mode (enables debug features)
DEV_MODE=false

# Enable debug logging
DEBUG=false

# Show welcome message on startup
SHOW_WELCOME=true

# ================================
# AI CONFIGURATION
# ================================

# Google Gemini API Key for Ngọc AI Assistant
GEMINI_API_KEY=

# Google Gemini Model (default: gemini-2.5-flash)
GEMINI_MODEL=gemini-2.5-flash

# ================================
# ADVANCED CONFIGURATION
# ================================

# Maximum concurrent commands
MAX_CONCURRENT_COMMANDS=10

# Request timeout in milliseconds
REQUEST_TIMEOUT=30000

# Retry attempts for failed requests
RETRY_ATTEMPTS=3

# Memory usage warning threshold (MB)
MEMORY_WARNING_THRESHOLD=500

# Credit 
CONVOX_SHOW_CREDIT=1
CONVOX_CREDIT_OK='1'

# Cấu hình tính năng
ENABLE_MENU=true
ENABLE_PLUGINS=true
ENABLE_COMMANDS=true
ENABLE_AUTO_REPLY=true
ENABLE_AUTO_MARK_READ=true
